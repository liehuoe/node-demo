{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "调试程序",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
      "env": { "NODE_ENV": "development" },
      "args": [
        "--ext",
        "ts,tsx",
        "--exec",
        "node",
        "-r",
        "ts-node/register",
        "--nolazy",
        "${workspaceFolder}/src/app.ts"
      ],
      "cwd": "${workspaceFolder}",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
